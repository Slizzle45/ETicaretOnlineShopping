@using ETicaret.Core.DTO
@using ETicaret.Core.ETicaretDatabase

@model List<YetkilerDTO>
@section addTopLibrary {

    <!-- DataTables -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/AdminLTE/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/AdminLTE/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- Theme style -->
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    <a href='~/AdminPanel/AdminYetkiler/AdminYetkilerKaydetIndex' class='btn btn-block btn-success col-md-3'>Yeni Yetki Ekle</a>
                </h1>
            </div><!-- /.col -->

            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">
                        <h4>Yetkiler / Yetki Erişim</h4>
                    </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">

                        <h3 class="card-title">Yetkiler</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                        <div class="input-group ml-3">
                            <input type="text" class="form-control" placeholder="Ara..." id="searchInput">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button" onclick="searchFunction()">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <ul class="nav nav-pills flex-column">
                            <li class="nav-item active">

                                @foreach (var item in Model)
                                {
                                    <div href="#" class="nav-link">
                                        <i class=""></i> @item.YetkiAdi
                                        <a href='/AdminPanel/AdminYetkiler/AdminYetkilerSilIndex/@item.Id' class='btn btn-sm btn-danger float-right'><i class='fas fa-trash'></i></a>
                                        <a href='/AdminPanel/AdminYetkiler/AdminYetkilerGuncelleIndex/?yetkiId=@item.Id' class='btn btn-sm btn-warning float-right'><i class='fas fa-pencil-alt'></i></a>
                                    </div>
                                }

                            </li>

                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card card-info card-outline">
                    <div class="card-header">
                        <h5 class="card-title">Erişim Alanları</h5>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                        <div class="input-group ml-3">
                            <input type="text" class="form-control" placeholder="Ara..." id="searchInput">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button" onclick="searchFunction()">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        @foreach (var item in ViewData["erisimAlani"] as IEnumerable<ErisimAlanlari>)
                        {
                            <div class="custom-control custom-checkbox">
                                <label>@item.ControllerAdi - (@item.ViewAdi)</label>
                            </div>
                        }

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<div>
    @Html.Raw(TempData["guncellemeMesaj"])
</div>

@section addBottomLibrary {

    <script src="~/AdminLTE/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminLTE/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/AdminLTE/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/AdminLTE/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/AdminLTE/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/AdminLTE/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/AdminLTE/plugins/jszip/jszip.min.js"></script>
    <script src="~/AdminLTE/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/AdminLTE/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/AdminLTE/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/AdminLTE/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/AdminLTE/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script src="~/AdminLTE/dist/js/adminlte.min.js"></script>
    <script>
        function searchFunction() {
            // Burada arama işlemlerini gerçekleştirebilirsiniz
            var searchTerm = document.getElementById("searchInput").value;
            console.log("Aranan kelime: " + searchTerm);
            // İhtiyaca göre bu değeri kullanarak arama işlemlerini yapabilirsiniz
        }
    </script>
}